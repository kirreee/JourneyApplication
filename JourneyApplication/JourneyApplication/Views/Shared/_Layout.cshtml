<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/MySite.less" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/App/Routing.js"></script>
    <script src="~/Scripts/App/HomeController.js"></script>
    <script src="~/Scripts/App/StopTripController.js"></script>
    <script src="~/Scripts/App/NavigationService.js"></script>
    <script src="~/Scripts/App/VehicleController.js"></script>
    <script src="~/Scripts/App/EditVehicleController.js"></script>
    <script src="~/Scripts/App/TripController.js"></script>
    <script src="~/Scripts/App/StatsController.js"></script>
    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/angular-chart.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Journey", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", })
            </div>
           @if (User.Identity.Name == "admin@live.se")
           {
               if (User.Identity.IsAuthenticated)
               {


                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#!/start">Home</a></li>
                            <li ng-disabled="errands.length"><a href="#!/starttrip">Skapa resa</a></li>
                            <li><a href="#!/vehicles">Skapa fordon/fordons översikt</a></li>
                            <li><a href="#!/stats">Statistik</a></li>
                            <li>@Html.ActionLink("Support", "AdminSupport", "Home", routeValues: null, htmlAttributes: new { id = "adminSupportlink" })</li>

                        </ul>

                        @Html.Partial("_LoginPartial")
                    </div>
                }

                else
                {
                    @Html.Partial("_LoginPartial")
               }
           }
           else
           {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#!/start">Home</a></li>
                    <li ng-disabled="errands.length"><a href="#!/starttrip">Skapa resa</a></li>
                    <li><a href="#!/vehicles">Skapa fordon/fordons översikt</a></li>
                    <li><a href="#!/stats">Statistik</a></li>
                    <li>@Html.ActionLink("Support", "UserSupport", "Home", routeValues: null, htmlAttributes: new { id = "adminSupportlink" })</li>

                </ul>

                @Html.Partial("_LoginPartial")
            </div>
           }

        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
